<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ravensethstudios.text_adventure1">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
                >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".BusyActivity"
            android:theme="@style/AppTheme.Busy">

        </activity>
        <activity android:name=".MenuActivity"
            android:theme="@style/AppTheme.Menu">

        </activity>
        <receiver android:name="com.ravensethstudios.text_adventure1.AlertReceiver" />
    </application>

</manifest>